{
    "name": "react-trinkets",
    "version": "0.0.4",
    "description": "A collection of react trinkets",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ivobos/react-trinkets.git"
    },
    "author": "Ivo Bosticky",
    "license": "MIT",
    "homepage": "https://github.com/ivobos/react-trinkets",
    "keywords": [
        "react-trinkets",
        "react-component",
        "react",
        "trinkets"
    ],
    "main": "cjs/index.js",
    "module": "esm/index.js",
    "types": "cjs/index.d.js",
    "scripts": {
        "build": "pnpm run build:cjs && pnpm run build:esm",
        "build:cjs": "tsc --project tsconfig.cjs.json --outDir cjs",
        "build:esm": "tsc --project tsconfig.esm.json --outDir esm",
        "release": "pnpm run build && changeset publish",
        "lint": "tsc"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.5",
        "@types/react": "^16.8.0",
        "@types/react-dom": "^16.8.0",
        "react": "^16.8.0",
        "react-dom": "^16.8.0",
        "tsup": "^8.1.0",
        "typescript": "^5.4.5"
    },
    "peerDependencies": {
        "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
    }
}
